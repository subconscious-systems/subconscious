{
    "name": "convex_app",
    "version": "1.0.0",
    "displayName": "Convex Real-time App",
    "description": "AI todo assistant with real-time updates using Subconscious + Convex",
    "private": true,
    "type": "module",
    "setup": [
        "npm install",
        "npx convex dev (keep this terminal running - auto-generates .env.local with VITE_CONVEX_URL)",
        "Set SUBCONSCIOUS_API_KEY in Convex Dashboard > Settings > Environment Variables",
        "npm run dev (new terminal)"
    ],
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build",
        "preview": "vite preview",
        "convex": "convex dev"
    },
    "dependencies": {
        "convex": "^1.17.0",
        "react": "^18.3.1",
        "react-dom": "^18.3.1"
    },
    "devDependencies": {
        "@types/react": "^18.3.12",
        "@types/react-dom": "^18.3.1",
        "@vitejs/plugin-react": "^4.3.3",
        "autoprefixer": "^10.4.20",
        "postcss": "^8.4.49",
        "tailwindcss": "^3.4.15",
        "typescript": "^5.6.3",
        "vite": "^5.4.11"
    }
}